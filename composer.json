{
  "name": "samuelreichor/craft-loanwords",
  "description": "Enhance screen reader experience by adding loanwords.",
  "type": "craft-plugin",
  "license": "proprietary",
  "version": "5.0.0",
  "support": {
    "email": "samuelreichor@gmail.com",
    "issues": "https://github.com/samuelreichor/craft-loanwords/issues?state=open",
    "source": "https://github.com/samuelreichor/craft-loanwords",
    "docs": "https://github.com/samuelreichor/craft-loanwords",
    "rss": "https://github.com/samuelreichor/craft-loanwords/releases.atom"
  },
  "keywords": [
    "craftcms",
    "craft-plugin",
    "loanwords",
    "a11y",
    "accessiblity"
  ],
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^5.0.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "samuelreichor\\loanwords\\": "src/"
    }
  },
  "extra": {
    "handle": "loanwords",
    "name": "Loanwords",
    "documentationUrl": "https://github.com/samuelreichor/craft-loanwords",
    "class": "samuelreichor\\loanwords\\Loanwords"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "authors": [
    {
      "name": "Samuel Reich√∂r",
      "homepage": "https://samuelreichor.at/libraries"
    }
  ]
}
